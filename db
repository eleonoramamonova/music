create table if not exists artist(
	artist_id serial primary key,
	artist_name varchar(60) not null
);

create table if not exists genre(
	genre_id serial primary key,
	genre_name varchar(60) not null
);

create table if not exists album(
	album_id serial primary key,
	album_name varchar(60) not null
);

create table if not exists track(
	track_id serial primary key,
	album int not null references album(album_id), 
	track_name varchar(60) not null,
	track_duration time not null
);

create table if not exists collection(
	collection_id serial primary key,
	collection_name varchar(60) not null,
	collection_year date null
);

 create table if not exists artist_album(
	artist integer REFERENCES artist(artist_id),
	album integer references album(album_id),
	CONSTRAINT artist_album_pk primary key (artist, album)
);

create table if not exists artist_genre(
	artist integer REFERENCES artist(artist_id),
	genre integer references genre(genre_id),
	CONSTRAINT artist_genre_pk primary key (artist, genre)
 );
  
 create table if not exists collection_track(
	collection integer not null REFERENCES collection(collection_id),
	track integer not null references track(track_id),
	CONSTRAINT collection_track_pk primary key (collection, track)
);


  
  
